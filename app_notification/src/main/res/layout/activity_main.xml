<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_title"
        android:hint="請輸入 Title"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_message"
        android:hint="請輸入 Message"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_channel1"
        android:onClick="sendByChannel1"
        android:textSize="20dp"
        android:text="channel 1"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/et_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_channel2"
        android:onClick="sendByChannel2"
        android:text="channel 2"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/et_message"
        android:layout_toRightOf="@+id/btn_channel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_delete"
        android:onClick="deleteByChannel1"
        android:textSize="20dp"
        android:text="delete 1"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/btn_channel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_continue"
        android:onClick="continueByChannel2"
        android:textSize="20dp"
        android:text="continue 1"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/btn_channel1"
        android:layout_toRightOf="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_update"
        android:onClick="updateByChannel1"
        android:textSize="20dp"
        android:text="update 1"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>